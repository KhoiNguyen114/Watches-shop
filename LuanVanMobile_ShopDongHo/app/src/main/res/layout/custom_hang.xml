<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/imageViewLogoHang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewTenHang"
        android:layout_width="256dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        android:text="Hãng ABC"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewLogoHang"
        app:layout_constraintTop_toTopOf="@+id/imageViewLogoHang" />

    <TextView
        android:id="@+id/textViewQuocGiaHang"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="Pháp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewLogoHang"
        app:layout_constraintTop_toBottomOf="@+id/textViewTenHang" />
</androidx.constraintlayout.widget.ConstraintLayout>