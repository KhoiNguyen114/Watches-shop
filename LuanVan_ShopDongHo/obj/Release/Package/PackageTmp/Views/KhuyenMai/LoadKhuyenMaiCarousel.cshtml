@using LuanVan_ShopDongHo.Models;
@{ Layout = null;

}
@model List<KHUYENMAI>


<div class="col-md-6">
    @if (ViewBag.kq == true)
    {
        <div id="carousel" class="mb-2 mt-2 ml-2">
            <div id="myCarouselKhuyenMai" class="carousel slide" data-ride="carousel" data-interval="5000">

                <!-- Indicators -->
                <ul class="carousel-indicators">
                    @if (Model.Count == 1)
                    {
                        <li data-target="#myCarouselKhuyenMai" data-slide-to="0" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#myCarouselKhuyenMai" data-slide-to="0" class="active"></li>
                        for (int i = 1; i < Model.Count; i++)
                        {
                            <li data-target="#myCarouselKhuyenMai" data-slide-to="@i"></li>
                        }
                    }

                    @*<li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                        <li data-target="#myCarousel" data-slide-to="4"></li>*@
                </ul>
                <!-- The slideshow -->
                <div class="carousel-inner">
                    @if (Model.Count == 1)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" style="height:350px;" src="~/Content/Images/KhuyenMai/@Model[0].HINHANH" alt="First slide">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" style="height:350px;" src="~/Content/Images/KhuyenMai/@Model[0].HINHANH" alt="First slide">
                        </div>
                        for (int h = 1; h < Model.Count; h++)
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" style="height:350px;" src="~/Content/Images/KhuyenMai/@Model[h].HINHANH">
                            </div>
                        }
                    }

                    @*<div class="carousel-item">
                            <img class="d-block w-100" style="height:300px;" src="~/Content/Images/BannerImages/banner-citizen-timepieces.jpg" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" style="height:300px;" src="~/Content/Images/BannerImages/banner.png" alt="Forth slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" style="height:300px;" src="~/Content/Images/BannerImages/dong-ho-citizen-chinh-hang-nhap-my.png" alt="Fifth slide">
                        </div>*@
                </div>
                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#myCarouselKhuyenMai" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#myCarouselKhuyenMai" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    }
</div>





