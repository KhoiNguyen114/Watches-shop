<!DOCTYPE html>
@using LuanVan_ShopDongHo.Models;
@using System.Linq;
@using System.Data.Linq;
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="~/Content/_Admin.css" rel="stylesheet" type="text/css"/>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.js"></script>
    <style>
        #backHome :hover {
            text-decoration: none;
        }
    </style>
</head>
<body>

    <div class="btn" id="btn-Bars">
        <span class="fas fa-bars"></span>
    </div>

    <nav class="sidebar">
        <div class="text">
            <a href="@Url.Action("Home","Home")" style="color:white;text-decoration:none;" id="backHome"> Shop đồng hồ NQN</a>
        </div>
        @{
            Html.RenderAction("MenuAdmin", "AdminPage");
        }
    </nav>

    <div id="Thebody">
        @RenderBody()
    </div>
    <script>
        $('#btn-Bars').click(function () {
            $(this).toggleClass("click");
            $('.sidebar').toggleClass("show");
            $('#Thebody').toggleClass("show");
        });
        $('#qldh-btn').click(function () {
            $('nav ul #qldh-show').toggleClass("show");
            $('nav ul .qldh').toggleClass("rotate");
        });
        $('#qlk-btn').click(function () {
            $('nav ul #qlk-show').toggleClass("show");
            $('nav ul .qlk').toggleClass("rotate");
        });
        $('#qlnd-btn').click(function () {
            $('nav ul #qlnd-show').toggleClass("show");
            $('nav ul .qlnd').toggleClass("rotate");
        });
        $('#qlbh-btn').click(function () {
            $('nav ul #qlbh-show').toggleClass("show");
            $('nav ul .qlbh').toggleClass("rotate");
        });
        $('#qltk-btn').click(function () {
            $('nav ul #qltk-show').toggleClass("show");
            $('nav ul .qltk').toggleClass("rotate");
        })
    </script>
    <script src="~/Scripts/notify.js"></script>
    <script src="~/Scripts/Hang.js"></script>
    <script src="~/Scripts/SanPham.js"></script>
    <script src="~/Scripts/PhieuNhap.js"></script>
    <script src="~/Scripts/DanhMucSP.js"></script>
    <script src="~/Scripts/KhuyenMai.js"></script>
    <script src="~/Scripts/TaiKhoan.js"></script>
    <script src="~/Scripts/NhanVien.js"></script>
    <script src="~/Scripts/PhanQuyen.js"></script>
    <script src="~/Scripts/TinTuc.js"></script>
    <script src="~/Scripts/CheDoBaoHanh.js"></script>
    <script src="~/Scripts/KhachHang.js"></script>
    <script src="~/Scripts/ThongTinBaoHanh.js"></script>
    <script src="~/Scripts/ChuongTrinhVoucher.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
