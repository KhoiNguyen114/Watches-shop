    <script type="text/javascript">
        let dropdown_hovering = false;
        let dropdown_entered = false;
        let link_hovers = document.getElementsByClassName("dropdown_link");

        for (const item of link_hovers) {
            let id_item = item.getAttribute('id');
            let menu = document.querySelector(`div#${id_item}`);


            menu.onmouseenter = function () {
                menu.style.visibility = "visible";
            }
            menu.onmouseleave = function () {

                menu.style.visibility = "hidden";
            }
            item.onmouseover = function () {

                let dropdown_menus = document.getElementsByClassName('dropdown-menu')
                for (let item of dropdown_menus) {
                    item.style.visibility = "hidden";
                }
                menu.style.visibility = "visible";
                dropdown_hovering = true;
            }

        }
        let header_div = document.getElementById('header')
        header_div.onmouseenter = function () {
            let dropdown_menus = document.getElementsByClassName('dropdown-menu')
            for (let item of dropdown_menus) {
                item.style.visibility = "hidden";
            }
        }
    </script>
