<script type="text/javascript">
    $('#btnFilterKH').click(function (e) {
        e.preventDefault();
        var url = window.location.origin + "/KhachHang/QuanLyKhachHang?&tenKH=" + $('#filterTenKH').val() + "&trangThai=" + $('#filterTrangThai').val() + "&gioitinh=" + $('#filterGT').val();
        window.location = url;
    })

</script>