@using LuanVan_ShopDongHo.Models;
@{
    ViewBag.Title = "XuatFilePhieuNhap";
}
@model  NhapHangXuatFile


<style>
    .marginTH{
        padding: 10px;
    }
</style>

<div class="container">
    <div class="row" style="font-size: 20px">
        <p style="font-weight: bold; font-size: 40px">SHOP ĐỒNG HỒ NQN</p>
        <p>Địa chỉ: 140 Lê Trọng Tấn, Phường Tây Thạnh, Quận Tân Phú, TP. Hồ Chí Minh</p>
        <p>Email: nqn192025@gmail.com</p>
        <p>Điện thoại: 0123456789</p>
    </div>
    <div class="row" style="font-size: 20px">
        <div style="text-align: center">
            <p style="text-transform: uppercase; font-size: 38px; font-weight: bold">Hóa đơn nhập hàng</p>
            <p>Ngày @Model.pn.ngayLap.Value.Day tháng @Model.pn.ngayLap.Value.Month năm @Model.pn.ngayLap.Value.Year </p>
        </div>
    </div>
    <div class="row" style="font-size: 20px">
        <p>Mã phiếu nhập hàng: <span>@Model.pn.maPN</span></p>
        <p>Hãng: <span>@Model.pn.tenHang</span></p>
        <p>Nhân viên thực hiện: <span>@Model.pn.tenNV</span></p>
    </div>
    <div class="row">
        <table style="border: 1px solid">
            <tr>
                <th class="marginTH">STT</th>
                <th class="marginTH">Sản phẩm</th>
                <th class="marginTH">Số lượng</th>
                <th class="marginTH">Đơn giá (VNĐ)</th>
                <th class="marginTH">Thành tiền (VNĐ)</th>
            </tr>
            @{
                int dem = 1;
            }
            @foreach (var item in Model.ctpn)
            {
                <tr>
                    <td class="marginTH">@dem</td>
                    <td class="marginTH">@item.tenSP</td>
                    <td class="marginTH" style="text-align: right">@item.soLuong</td>
                    <td class="marginTH" style="text-align: right">@string.Format("{0: 0,00}", item.donGia)</td>
                    <td class="marginTH" style="text-align: right">@string.Format("{0: 0,00}", item.thanhTien)</td>
                </tr>

                dem++;
            }
            <tr>
                <td colspan="4" style="text-align: right; font-weight: bold" class="marginTH">Tổng cộng</td>
                <td class="marginTH" style="text-align: right">@string.Format("{0: 0,00}", Model.pn.tongTien)</td>
            </tr>
        </table>
    </div>
    <div style="height: 300px; margin-top: 10px">
        <table style="margin-top: 50px; width: 100%; border: hidden">
            <tr style="border: hidden">
                <th style="text-align: center; font-weight: bold; font-size: 20px; margin-top: 50px; text-transform: uppercase; width: 50%; border: hidden">Nhà cung cấp</th>
                <th style="text-align: center; font-weight: bold; font-size: 20px; margin-top: 50px; text-transform: uppercase; width: 50%; border: hidden">Người mua hàng</th>
            </tr>
            <tr>
                <td style="text-align: center; border: hidden"><i>(Kí và ghi rõ họ tên)</i></td>
                <td style="text-align: center; border: hidden"><i>(Kí và ghi rõ họ tên)</i></td>
            </tr>
        </table>       
    </div>
    
</div>

