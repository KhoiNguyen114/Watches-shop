<div class="spacer20">
    <center>
        <div class="pagination">
            @Html.PagedListPager((PagedList.IPagedList)ViewBag.dsTTBH, page => Url.Action("QuanLyThongTinBaoHanh", new { page, @class = "active" }))
        </div>
    </center>
