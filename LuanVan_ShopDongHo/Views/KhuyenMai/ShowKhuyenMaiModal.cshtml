@using LuanVan_ShopDongHo.Models;
@{ Layout = null;

}
@model KHUYENMAI



@if (ViewBag.kq == true)
{
    <input type="text" id="inputXacNhanModal" hidden="hidden" value="@ViewBag.kq" />
}
<div id="myModal" class="modal">

    <!-- The Close Button -->
    <span class="close">&times;</span>

    <!-- Modal Content (The Image) -->
        <img src="~/Content/Images/KhuyenMai/@Model.HINHANH" style="width: 50%; height: 50%; top: 200px;" class="modal-content mx-auto" id="img01" />

    <!-- Modal Caption (Image Text) -->
    <div id="caption"></div>
</div>



<script>
    $(document).ready(function () {
        var a = $('#inputXacNhanModal').val();
        if (a) {
            var timeout = window.setTimeout(function () {
                //$('#myModal').css('visibility', 'visible');
                $('#myModal').modal('show');
            }, 2000);
        }
    })
</script>